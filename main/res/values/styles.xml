<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="celdaRanking">
        <!-- botones para land -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FF8A65</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">18dip</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="celdaDentroRanking">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">7dip</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="celdaDentroRankingFacil">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#009624</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">7dip</item>
        <item name="android:text">@string/dificultadBaja</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="celdaDentroRankingMedia">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#E5BE01</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">7dip</item>
        <item name="android:text">@string/dificultadMedia</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="celdaDentroRankingDificil">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#cc0000</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/dificultadAlta</item>
        <item name="android:padding">7dip</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="Botonesnormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item><!-- Efecto -->



    </style>
    <style name="botonesfin">
        <!-- botones para land -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>

    </style>
</resources>
